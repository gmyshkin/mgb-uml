{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build MGB-UML",
            "type": "shell",
            "command": "/usr/bin/make",
            "args": ["-j$(nproc)"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run MGB-UML",
            "type": "shell",
            "command": "./mgb-uml",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": "Build MGB-UML", 
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}