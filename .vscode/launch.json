{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug TikZiT",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tikzit",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [
                { "name": "DISPLAY", "value": ":0" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build TikZiT"
        }
    ]
}